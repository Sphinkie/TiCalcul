<?xml version="1.0" encoding="UTF-8"?>
<Package>
	<DisplayName>TiCalcul</DisplayName>
	<Description>TiCalcul is a desktop timecode calculator.</Description>
	<Version>2.3</Version>
	<ReleaseDate>2025-05-20</ReleaseDate>
	<Licenses>
		<License name="LGPL License" file="license.txt"/>
	</Licenses>
	<Default>true</Default>
	<Operations>
		<Operation name="CreateShortcut">
			<Argument>@TargetDir@/tiCalcul.exe</Argument>
			<Argument>@StartMenuDir@/TiCalcul.lnk</Argument>
			<Argument>workingDirectory=@TargetDir@</Argument>
			<Argument>description=The Ultimate Timecode Calculator</Argument>		
		</Operation>
		<Operation name="CreateShortcut">
			<Argument>@TargetDir@/tiCalcul.exe</Argument>
			<Argument>@DesktopDir@/TiCalcul.lnk</Argument>
			<Argument>workingDirectory=@TargetDir@</Argument>
			<Argument>description=The Ultimate Timecode Calculator</Argument>		
		</Operation>
	</Operations>
</Package>
